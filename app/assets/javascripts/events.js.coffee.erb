$(document).ready -> 

	#Create Date Picker
	$("#event_date").datepicker
		dateFormat: "yy-mm-dd",
		numberOfMonths: 2,
		showOtherMonths: true,
		selectOtherMonths: true,
		showAnim: "drop",
		showButtonPanel: true
		
	#Create form buttons 'Save' and 'Cancel'
	$("input:submit, a", ".actions").button()
	
	#Populate for Autocomplete of Recent Venues
	recentValues = <%= "#{Event.all.distinct(:venue_name)}" %>
	$("#event_venue_name").autocomplete
			source: recentValues
